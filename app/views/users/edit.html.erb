
<%= render 'shared/header' %>

<div class="container-fluid all-height vixiv-background2">
	<div class="row footer-position2">
		<div class="user-edit-box">
			<%= form_for(@user) do |f| %>
				<div class="field">
					<%= f.label :profile_image_id, "プロフィール画像", class: "vixiv-black user-edit-title" %>
				</div>
				<div class="field">
					<%= f.attachment_field :profile_image, class: "post-image-mysize" %>
				</div>
				<div class="field">
					<%= f.label :name, "ニックネーム", class: "vixiv-black user-edit-title" %>
				</div>
				<div class="field">
					<%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "ニックネーム", class: "post-mysize" %>
				</div>
				<div class="field">
					<%= f.label :name, "自己紹介", class: "vixiv-black user-edit-introduction-title" %>
				</div>
				<div class="field">
					<%= f.text_area :introduction, :size => "1x5", autofocus: true, autocomplete: "introduction", :placeholder => "自己紹介", class: "user-edit-body-mysize" %>
				</div>
				<div class="actions post-button-area">
					<%= f.submit "保存", class: "btn btn-primary post-button" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<footer>
<div class="vixiv-background2 footer-position">
	<div class="footer-box">
		<div class="footer-content">
			<div class="footer-left">
				<div class="footer-title">会社情報</div>
				<div class="vixiv-info">
					<div class="vixiv-black">〒000-0000<br>ｘｘ市ｘｘ区ｘｘ町0-0</div>
					<div class="vixiv-black">Mail：ｘｘｘ＠ｘｘ.ｘｘ</div>
					<div class="vixiv-black">Tell：000-000-0000</div>
				</div>
			</div>
			<div class="footer-right">
				<div class="footer-title">ご利用について</div>
				<div class="footer-link">
					<div class="footer-text">利用規約</div>
					<div class="footer-text">ガイドライン</div>
					<div class="footer-text">プライバシーポリシー</div>
					<%= link_to(new_contact_path, class: "") do %>
					<div class="footer-text">お問い合わせ</div>
					<% end %>
				</div>
			</div>
			<div class="footer-underline vixiv-black"></div>
			<div class="copyright vixiv-black">© vixiv</div>
		</div>
	</div>
</div>
</footer>
