<div class="top-background">
<div class="top-box3">
<div class="top-box-content">
<div class="devise-box">
<div class="top-logo2"></div>
<div class="devise-title vixiv-black">ユーザーログイン</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input-mysize" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "パスワード", class: "input-mysize" %>
  </div>
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field remember-mysize vixiv-black">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

<div class="devise-box">
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-info btn-block devise-button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
</div>
</div>