<div class="top-box">
<div class="top-box-content">
<div class="devise-box">
<div class="top-logo"></div>
<div class="devise-title vixiv-black">新規登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "  管理者名", class: "input-mysize" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "  メールアドレス", class: "input-mysize" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "  パスワード", class: "input-mysize" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "  パスワード(再入力)", class: "input-mysize" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-info btn-block devise-button" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
</div>
</div>
</div>